@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrarse";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="fas fa-user-plus text-primary" style="font-size: 4rem;"></i>
                    <h2 class="mt-3 fw-bold">@ViewData["Title"]</h2>
                    <p class="text-muted">Crea tu cuenta en E-Migrant</p>
                </div>
                
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" placeholder="Correo electrónico" />
                        <label asp-for="Input.Email"><i class="fas fa-envelope me-2"></i>Correo electrónico</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" placeholder="Contraseña" />
                        <label asp-for="Input.Password"><i class="fas fa-lock me-2"></i>Contraseña</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        <div class="form-text small text-muted">
                            La contraseña debe tener al menos 6 caracteres, incluyendo mayúsculas, minúsculas y números.
                        </div>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirmar contraseña" />
                        <label asp-for="Input.ConfirmPassword"><i class="fas fa-lock me-2"></i>Confirmar contraseña</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>
                    
                    <div class="form-floating mb-4">
                        <select asp-for="Input.Rol" class="form-select" asp-items="@Model._listaRoles">
                            <option value="">Selecciona un rol</option>
                        </select>
                        <label asp-for="Input.Rol"><i class="fas fa-user-tag me-2"></i>Tipo de usuario</label>
                        <span asp-validation-for="Input.Rol" class="text-danger small"></span>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Registrarse
                        </button>
                    </div>
                </form>
                
                <hr class="my-4">
                
                <p class="text-center mb-0">¿Ya tienes una cuenta?</p>
                <div class="d-grid mt-3">
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-primary">
                        <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
