@page
@model LogoutModel
@{
    ViewData["Title"] = "Cerrar Sesión";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-sign-out-alt text-primary" style="font-size: 4rem;"></i>
                        <h2 class="mt-3 fw-bold">@ViewData["Title"]</h2>
                        <p class="text-muted">¿Estás seguro de que deseas cerrar sesión?</p>
                    </div>
                    
                    <form method="post" class="d-grid gap-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-out-alt me-2"></i>Sí, cerrar sesión
                        </button>
                        <a asp-page="/Index" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Volver al inicio
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                        <h2 class="mt-3 fw-bold">¡Sesión cerrada!</h2>
                        <p class="text-muted">Gracias por visitarnos. ¡Vuelve pronto!</p>
                    </div>
                    
                    <div class="d-grid">
                        <a asp-page="/Index" class="btn btn-primary btn-lg">
                            <i class="fas fa-home me-2"></i>Volver al inicio
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
