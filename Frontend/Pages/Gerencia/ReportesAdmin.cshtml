@page
@attribute [Authorize(Roles = "Admin")]
@model Frontend.Pages.Gerencia.ReportesAdminModel
@{
    ViewData["Title"] = "Reportes y Estadísticas";
}

<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <i class="fas fa-chart-bar text-dark" style="font-size: 4rem;"></i>
                    <h2 class="mt-3 fw-bold">@ViewData["Title"]</h2>
                    <p class="text-muted">Estadísticas y reportes del sistema</p>
                </div>
                
                <div class="text-start mb-3">
                    <a asp-page="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver al Panel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center py-5">
                <i class="fas fa-chart-line fa-3x mb-3 text-dark"></i>
                <h4>Módulo de Reportes</h4>
                <p class="text-muted">En desarrollo...</p>
            </div>
        </div>
    </div>
</div>
