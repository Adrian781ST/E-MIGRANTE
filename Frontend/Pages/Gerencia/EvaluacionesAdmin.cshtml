@page
@attribute [Authorize(Roles = "Admin")]
@model Frontend.Pages.Gerencia.EvaluacionesAdminModel
@{
    ViewData["Title"] = "Todas las Evaluaciones";
}

<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <i class="fas fa-star text-warning" style="font-size: 4rem;"></i>
                    <h2 class="mt-3 fw-bold">@ViewData["Title"]</h2>
                    <p class="text-muted">Todas las calificaciones de la aplicación</p>
                </div>
                
                <div class="text-start mb-3">
                    <a asp-page="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver al Panel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h4 class="mb-4 fw-bold">
                    <i class="fas fa-list me-2"></i>Evaluaciones Realizadas
                </h4>
                
                @if (Model._ListarCalificaciones is not null && Model._ListarCalificaciones.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th><i class="fas fa-id-badge me-1"></i>ID</th>
                                    <th><i class="fas fa-star me-1"></i>Calificación</th>
                                    <th><i class="fas fa-id-card me-1"></i>Documento Migrante</th>
                                    <th><i class="fas fa-calendar me-1"></i>Fecha</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cal in Model._ListarCalificaciones)
                                {
                                    <tr>
                                        <td><strong>@cal.Id</strong></td>
                                        <td>
                                            @switch(cal.ValorCalificacion)
                                            {
                                                case Dominio.ValorCalificacion.Excelente:
                                                    <span class="badge bg-success">Excelente</span>
                                                    break;
                                                case Dominio.ValorCalificacion.MuyBueno:
                                                    <span class="badge bg-info">Muy Bueno</span>
                                                    break;
                                                case Dominio.ValorCalificacion.Bueno:
                                                    <span class="badge bg-primary">Bueno</span>
                                                    break;
                                                case Dominio.ValorCalificacion.Regular:
                                                    <span class="badge bg-warning text-dark">Regular</span>
                                                    break;
                                                case Dominio.ValorCalificacion.Malo:
                                                    <span class="badge bg-danger">Malo</span>
                                                    break;
                                            }
                                        </td>
                                        <td>@cal.numeroDocumentoMigrante</td>
                                        <td>@cal.Fecha.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5 text-muted">
                        <i class="fas fa-star fa-3x mb-3"></i>
                        <p>No hay evaluaciones registradas</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
