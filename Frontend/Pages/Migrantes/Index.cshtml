@page
@attribute [Authorize(Roles = "Migrante")]
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model Frontend.Pages.Migrantes.IndexModel
@{
    ViewData["Title"] = "Panel Migrante";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-circle text-primary" style="font-size: 4rem;"></i>
                        <h2 class="mt-3 fw-bold">Bienvenido, @User.Identity.Name</h2>
                        <p class="text-muted">Panel de control del migrante</p>
                    </div>
                    
                    <div class="row g-4 mb-3 cards-spacing">
                        <div class="col-md-6">
                            <a asp-page="DatosPersonalesVer" asp-route-userNameA="@User.Identity.Name" class="card h-100 text-decoration-none border-primary">
                                <div class="card-body text-center py-5">
                                    <i class="fas fa-id-card text-primary mb-4" style="font-size: 2.5rem;"></i>
                                    <h5 class="card-title text-dark">Datos Personales</h5>
                                    <p class="card-text text-muted small">Ver y gestionar tu información personal</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-page="Emergencias" asp-route-userNameA="@User.Identity.Name" class="card h-100 text-decoration-none border-danger">
                                <div class="card-body text-center py-5">
                                    <i class="fas fa-exclamation-triangle text-danger mb-4" style="font-size: 2.5rem;"></i>
                                    <h5 class="card-title text-dark">Emergencias</h5>
                                    <p class="card-text text-muted small">Reportar y gestionar emergencias</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-page="GNovedad" class="card h-100 text-decoration-none border-warning">
                                <div class="card-body text-center py-5">
                                    <i class="fas fa-file-alt text-warning mb-4" style="font-size: 2.5rem;"></i>
                                    <h5 class="card-title text-dark">Novedades</h5>
                                    <p class="card-text text-muted small">Reportar nuevas novedades</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-page="Evaluanos" class="card h-100 text-decoration-none border-success">
                                <div class="card-body text-center py-5">
                                    <i class="fas fa-star text-success mb-4" style="font-size: 2.5rem;"></i>
                                    <h5 class="card-title text-dark">Evalúanos</h5>
                                    <p class="card-text text-muted small">Califica nuestra aplicación</p>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
