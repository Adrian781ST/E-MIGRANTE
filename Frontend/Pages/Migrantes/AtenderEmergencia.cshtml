@page
@model Frontend.Pages.Migrantes.AtenderEmergenciaModel
@{
    ViewData["Title"] = "Confirmar Atención";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    <h2 class="mt-3 fw-bold">@ViewData["Title"]</h2>
                    <p class="text-muted">Confirma que deseas marcar esta emergencia como atendida</p>
                </div>

                @if(ViewData["Existe"] as string == "La emergencia no existe por favor validar")
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Existe"]
                    </div>
                    <div class="text-center">
                        <a asp-page="Emergencias" class="btn btn-primary">
                            <i class="fas fa-arrow-left me-2"></i>Volver a Emergencias
                        </a>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-4">
                        <p class="mb-0"><strong>Emergencia:</strong> @Model._emergencia.Descripcion</p>
                        <p class="mb-0"><strong>Estado:</strong> <span class="badge bg-warning">@Model._emergencia.Status</span></p>
                    </div>
                    
                    <form method="post">
                        <input type="hidden" asp-for="_emergencia.Id" />
                        <input type="hidden" asp-for="_emergencia.MigranteId" />
                        <input type="hidden" asp-for="_emergencia.Status" />
                        
                        @if (!string.IsNullOrEmpty(ViewData["Mensaje"] as string))
                        {
                            <div class="alert alert-danger mb-3">
                                <i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Mensaje"]
                            </div>
                        }
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check me-2"></i>Sí, estoy seguro
                            </button>
                            <a asp-page="Emergencias" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>No estoy seguro
                            </a>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
