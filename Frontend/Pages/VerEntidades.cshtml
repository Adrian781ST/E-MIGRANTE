@page
@model Frontend.Pages.VerEntidadesModel
@{
    ViewData["Title"] = "Entidades";
}

<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <i class="fas fa-building text-success" style="font-size: 4rem;"></i>
                    <h2 class="mt-3 fw-bold">@ViewData["Title"]</h2>
                    <p class="text-muted">Entidades que ofrecen servicios para migrantes</p>
                </div>
                
                <div class="text-start mb-3">
                    <a href="/" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver al Inicio
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    @if (Model._ListarEntidades is not null && Model._ListarEntidades.Any())
    {
        @foreach (var entidad in Model._ListarEntidades)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-success bg-opacity-10 rounded-circle p-3 me-3">
                                <i class="fas fa-building text-success" style="font-size: 2rem;"></i>
                            </div>
                            <div>
                                <h5 class="card-title mb-0">@entidad.RazonSocial</h5>
                                <small class="text-muted">@entidad.Nit</small>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            @if (!string.IsNullOrEmpty(entidad.Direccion))
                            {
                                <p class="mb-1">
                                    <i class="fas fa-map-marker-alt text-muted me-2"></i>@entidad.Direccion
                                </p>
                            }
                            @if (!string.IsNullOrEmpty(entidad.Telefono))
                            {
                                <p class="mb-1">
                                    <i class="fas fa-phone text-muted me-2"></i>@entidad.Telefono
                                </p>
                            }
                            @if (!string.IsNullOrEmpty(entidad.Pagina_Web))
                            {
                                <p class="mb-0">
                                    <i class="fas fa-globe text-muted me-2"></i>
                                    <a href="@entidad.Pagina_Web" target="_blank">@entidad.Pagina_Web</a>
                                </p>
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <a href="/Entidades/ServiciosEntidades?userNameA=@entidad.userName" class="btn btn-outline-success w-100">
                            <i class="fas fa-info-circle me-2"></i>Ver Servicios
                        </a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center py-5">
                    <i class="fas fa-building fa-3x mb-3 text-muted"></i>
                    <p class="text-muted">No hay entidades registradas</p>
                </div>
            </div>
        </div>
    }
</div>
